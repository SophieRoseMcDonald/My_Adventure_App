<h2> Adventure Location 1</h2>

<h1><%=@adventure.name%></h1>
<img src="<%=@adventure.image_url%>" alt="">

<form action="/adventures/<%=@adventure.id%>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button>Delete</button>
</form>

<a href="/adventures/<%=@adventure.id%>/edit">Edit</a>
<% @comment.each do |comment| %>
<p><%= comment.body %></p>
<% end %>

<form class="" action="/comments" method="post">
<input type="hidden" name="adventure_id" value="<%= @adventure.id %>">
  <textarea name="body" rows="8" cols="80"></textarea>
  <button>Add Comment</button>
</form>
